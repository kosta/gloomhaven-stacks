{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "ES6",
    // lib should not be needed but https://github.com/DefinitelyTyped/DefinitelyTyped/issues/15140
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["./src/**/*"]
}
