{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": false, //TODO this is the goal
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "target": "ES5",
    // lib should not be needed but https://github.com/DefinitelyTyped/DefinitelyTyped/issues/15140
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}